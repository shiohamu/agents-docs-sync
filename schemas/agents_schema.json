{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "ドキュメントのタイトル"
    },
    "description": {
      "type": "string",
      "description": "プロジェクトの説明"
    },
    "project_overview": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "languages": {"type": "array", "items": {"type": "string"}},
        "dependencies": {"type": "array", "items": {"type": "string"}}
      },
      "required": ["name", "languages"]
    },
    "setup_instructions": {
      "type": "object",
      "properties": {
        "prerequisites": {"type": "array", "items": {"type": "string"}},
        "installation_commands": {"type": "array", "items": {"type": "string"}},
        "llm_setup": {
          "type": "object",
          "properties": {
            "api_setup": {"type": "string"},
            "local_setup": {"type": "string"}
          }
        }
      }
    },
    "build_test_instructions": {
      "type": "object",
      "properties": {
        "build_commands": {"type": "array", "items": {"type": "string"}},
        "test_commands": {"type": "array", "items": {"type": "string"}},
        "test_execution_notes": {"type": "string"}
      }
    },
    "coding_standards": {
      "type": "object",
      "properties": {
        "standards": {"type": "array", "items": {"type": "string"}},
        "notes": {"type": "string"}
      }
    },
    "pr_guidelines": {
      "type": "object",
      "properties": {
        "branch_creation": {"type": "string"},
        "commit_guidelines": {"type": "string"},
        "pr_creation": {"type": "string"}
      }
    },
    "auto_generated_note": {
      "type": "string",
      "description": "自動生成に関する注意書き"
    }
  },
  "required": ["title", "description", "project_overview", "setup_instructions", "build_test_instructions"]
}